<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image1"
        android:src="@drawable/yellow_round"
        android:layout_width="@dimen/md_simplelist_icon"
        android:layout_height="@dimen/md_simplelist_icon" />

    <ImageView
        android:id="@+id/image2"
        android:src="@drawable/ic_done_white"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/md_simplelist_icon_checked"
        android:layout_height="@dimen/md_simplelist_icon_checked"
        android:visibility="gone"/>

</RelativeLayout>
