<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="MyAppTheme"></style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏颜色 -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- toolbar背景色 -->
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <!-- 控件颜色 -->
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <!-- 竖直三点 弹出框文字颜色 -->
    <style name="MyPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- toolbar theme -->
    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- toolbar 标题颜色 -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- 左边横三条线 与 右边竖直三点颜色 -->
        <item name="colorControlNormal">@color/white</item>
    </style>


    <!-- other color themes -->

    <style name="AppBaseTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="popupTheme">@style/MyPopupTheme</item>
        <item name="popupMenuStyle">@style/popupMenuStyle</item>
        <!--增加视图的Padding值让你的布局恢复正常大小，并且可以把背景扩大 -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <!-- 没标题 -->
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_second_color_primary</item>
        <item name="android:windowBackground">@color/window_background</item>
        <!-- 搜索框样式 -->
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>

        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="selectableItemBackground">@drawable/selectable_background</item>
    </style>

    <style name="popupMenuStyle" parent="Base.Widget.AppCompat.PopupMenu.Overflow">
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>


    <style name="BaseDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_second_color_primary</item>
        <item name="android:windowEnterAnimation">@anim/abc_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/abc_popup_exit</item>
    </style>


